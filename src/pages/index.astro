---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION, PFP_URL } from '../consts';
---

<!DOCTYPE html>
<html lang="en">
